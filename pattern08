#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int i,j,r;
    scanf("%d",&r);
    int a1=(r-1)/2;
    int a2=3*r/2-1;
    for(i=0;i<r;i++){
        for(j=0;j<r;j++){
            if(j-i==a1 ||j+i==a2 || i==a1){
                printf("*");
            }
            else{
                printf(" ");
            }
        }
        printf("\n");
    }
    
    return 0;
}
