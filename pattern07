#include <stdio.h> 
int main() 
{ 
 
    int i,j,k,r; 
    scanf("%d",&r);
    int f=1,l=1,d=r-1; 
    for (i=0;i<r;i++) 
        printf("%d ",f++); 
  
    printf("\n");  
    for (i=1;i<r-1;i++) { 
        for (j=0;j<2*(r-i-1);j++) 
            printf(" ");  
        printf("%d",d--); 
  
        printf("\n"); 
    } 
    for(i=0;i<r;i++) 
        printf("%d ",l++); 
    return 0; 
} 
